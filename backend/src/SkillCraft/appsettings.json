{
  "AllowedHosts": "*",
  "ApplicationLogging": {
    "Extent": "ActivityOnly",
    "OnlyErrors": false
  },
  "Cookies": {
    "RefreshToken": {
      "HttpOnly": true,
      "MaxAge": "7.00:00:00",
      "SameSite": "Strict",
      "Secure": true
    },
    "Session": {
      "SameSite": "Strict"
    }
  },
  "Cors": {
    "AllowedMethods": [ "DELETE", "GET", "PATCH", "POST", "PUT" ],
    "AllowedHeaders": [ "Content-Type" ],
    "AllowCredentials": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "MongoDB": {
    "DatabaseName": "SkillCraft"
  },
  "OpenAuthentication": {
    "AccessToken": {
      "TokenType": "at+jwt",
      "LifetimeSeconds": 300
    }
  },
  "Portal": {
    "Realm": "skillcraftrpg"
  }
}
